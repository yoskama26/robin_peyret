= form_with(model: beer) do |form|
  - if beer.errors.any?
    %div{:style => "color: red"}
      %h2
        = pluralize(beer.errors.count, "error")
        prohibited this beer from being saved:
      %ul
        - beer.errors.each do |error|
          %li= error.full_message
  %div
    = form.label :name, style: "display: block"
    = form.text_field :name
  %div
    = form.label :brand, style: "display: block"
    = form.text_field :brand
  %div
    = form.label :notes_id, style: "display: block"
    = form.text_field :notes_id
  %div
    = form.submit
